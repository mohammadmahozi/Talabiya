<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_ripple"
    android:clickable="true"
    android:focusable="true"

    android:weightSum="2">


    <TextView

        android:id="@+id/suborder_item_quantity"
        style="@style/recycler_primary_text_view"
        android:layout_width="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/suborder_item_name"
        style="@style/recycler_primary_text_view"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/suborder_item_quantity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/suborder_item_price"
        style="@style/recycler_primary_text_view"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/suborder_item_note"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suborder_item_name" />


</androidx.constraintlayout.widget.ConstraintLayout>