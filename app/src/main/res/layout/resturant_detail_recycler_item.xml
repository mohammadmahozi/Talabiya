<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"

    >

    <TextView
        android:id="@+id/restaurant_detail_recycler_item_name_text_view"
        style="@style/recycler_primary_text_view"
        android:layout_width="333dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/restaurant_detail_recycler_item_price_text_view"
        style="@style/recycler_primary_text_view"
        android:layout_width="57dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/restaurant_detail_recycler_item_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/restaurant_detail_recycler_item_name_text_view" />

    <TextView
        android:id="@+id/restaurant_detail_recycler_item_category_text_view"
        android:layout_width="333dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_detail_recycler_item_name_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>